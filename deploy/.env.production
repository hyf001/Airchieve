# =============================================================
# AIrchieve 生产环境变量模板
# 使用方法：
#   cp deploy/.env.production .env
#   vim .env   # 填写实际值
# 注意：.env 不要提交到 git！
# =============================================================

# ── 域名（部署脚本自动读取）──────────────────────────────────
DOMAIN=www.nanbende.com
SSL_EMAIL=617748256@qq.com

# ── 应用配置 ─────────────────────────────────────────────────
PROJECT_NAME=AIrchieve
VERSION=0.1.0
API_V1_STR=/api/v1
DEBUG=False

# ── 安全密钥（必须修改！）────────────────────────────────────
# 生成命令：python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=请替换为随机生成的强密钥
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ── 数据库（生产环境使用 MySQL）──────────────────────────────
DATABASE_URL=mysql+aiomysql://airchieve:your_db_password@127.0.0.1:3306/airchieve
# 开发环境（SQLite）:
# DATABASE_URL=sqlite+aiosqlite:///data/app.db

# ── CORS（只允许自己的域名）──────────────────────────────────
CORS_ORIGINS=["https://www.nanbende.com"]

# ── Gemini API ────────────────────────────────────────────────
GEMINI_API_URL=https://api.mmw.ink
GEMINI_API_KEY=your_key
GEMINI_MODEL=[A]gemini-3-pro-image-preview

